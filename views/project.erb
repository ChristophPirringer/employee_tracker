
<h1><%= @project.project_name() %></h1>

<% if @project.employees().any?() %>
	<h3>Here are all the employees in this project:</h3>

	<ul>
		<% @project.employees().each() do |employee| %>
		<li><%= employee.name() %></li>
		<% end %>
	</ul>

<% else %>
	<h3>There are no employees on this project!</h3>
	<% end %>

<br>

  <form action="/projects/<%= @project.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="project_name">Rename the project:</label>
    <input id="project_name" name="project_name" type="text">

    <button type="submit">Update</button>
  </form>

<br>

<form action="/projects/<%= @project.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>

<div class="container">
	<a href="/">Home</a>
	<a href="/projects">View All Projects</a>
	<a href="/projects/new">Add New Project</a>
	<a href="/projects/<%= @project.id() %>/new">Add New employee to this project</a>
</div>
